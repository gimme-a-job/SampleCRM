@using SampleCRM.Models.ViewModels

@model IEnumerable<RoleViewModel>

@{
    ViewData["Title"] = "ロール一覧";
}

<h1>ロール一覧</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
            </tr>
        }
    </tbody>
</table>
