@model SampleCRM.Models.ViewModels.ClientCompanyCommonViewModel

@{
    ViewData["Title"] = "顧客会社修正";
}

<h1>顧客会社修正</h1>

<div class="form-group">
    <label class="control-label"><label class="control-label"><span style="color:#ff0000;">※</span></label>は必須入力項目です。</label>
</div>

<hr />
<div class="row">
    <div class="col-md-5">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group col-md-3">
                @*会社コード(必須)*@
                <label asp-for="CompanyCode" class="control-label"></label><label class="control-label"><span style="color:#ff0000;">※</span></label>
                <input asp-for="CompanyCode" class="form-control" type="text" />
                <span asp-validation-for="CompanyCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CompanyName" class="control-label"></label><label class="control-label"><span style="color:#ff0000;">※</span></label>
                <input asp-for="CompanyName" class="form-control" />
                <span asp-validation-for="CompanyName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhoneticName" class="control-label"></label>
                <input asp-for="PhoneticName" class="form-control" />
                <span asp-validation-for="PhoneticName" class="text-danger"></span>
            </div>
            <div class="form-group col-md-4">
                <label asp-for="CompanyStatus" class="control-label"></label><label class="control-label"><span style="color:#ff0000;">※</span></label>
                <select asp-for="CompanyStatus" asp-items="@Model.CompanyStatusSelectList" class="form-select"></select>
                <span asp-validation-for="CompanyStatus" class="text-danger"></span>
            </div>
            <div class="form-group">
                @*訪問が必要かどうか*@
                <label asp-for="IsNeedVisiting" class="col-form-label"></label>
                <div class="col-sm-10 ms-md-2">
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" asp-for="IsNeedVisiting" value="true" id="requiredRadio" />
                        <label class="form-check-label" for="requiredRadio">必要</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" asp-for="IsNeedVisiting" value="false" id="notRequiredRadio" />
                        <label class="form-check-label" for="notRequiredRadio">不要</label>
                    </div>
                </div>
                <span asp-validation-for="IsNeedVisiting" class="text-danger"></span>
            </div>
            <div class="form-group col-md-3">
                <label asp-for="BusinessEvaluationPermitNumber" class="control-label"></label>
                <input asp-for="BusinessEvaluationPermitNumber" class="form-control" />
                <span asp-validation-for="BusinessEvaluationPermitNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Note" class="control-label"></label>
                <textarea asp-for="Note" class="form-control" rows="5"></textarea>
                <span asp-validation-for="Note" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="更新" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">顧客会社一覧へ戻る</a>
</div>

